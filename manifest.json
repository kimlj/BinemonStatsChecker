{
    "manifest_version": 3,
    "name": "Binemon stats checker",
    "version": "0.1.0",
    "icons": {
        "16": "./images/bine-64x64.png",
        "32": "./images/bine-64x64.png",
        "48": "./images/bine-64x64.png",
        "128": "./images/bine-64x64.png"
    },
    "background":{
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup.html",
        "default_icons": {
            "16": "./images/bine-64x64.png",
            "32": "./images/bine-64x64.png",
            "48": "./images/bine-64x64.png",
            "128": "./images/bine-64x64.png"
        }
    },
    "options_page": "options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions":[
        "https://app.binemon.io/*",
        "https://binemon.io/",
        "https://www.google.com/",

        "https://www.youtube.com/"
    ]
}
